<?xml version="1.0" encoding="utf-8"?>
<animationConfiguration xmlns:ns2="http://www.thalesgroup.com/hv/mwt/conf/common" xmlns="http://www.thalesgroup.com/hv/mwt/conf/situationview/animation">
  <animationRules id="IPDeviceRep_animation">
    <animationRule>
      <source xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="ns2:statusDataSourceType" name="fault"></source>
      <sourceType>INT</sourceType>
      <svgRefAnimation defaultValue="ipd_symbolOK" nodeId="fault.value_node">
        <enumerationBinding>
          <item inputValue="1" value="ipd_symbolFault"></item>
          <item inputValue="0" value="ipd_symbolOK"></item>
        </enumerationBinding>
      </svgRefAnimation>
    </animationRule>
    <animationRule>
      <source xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="ns2:computedStatusDataSourceType" statusComputerName="com.thalesgroup.scadasoft.stresstest.calculated.widget.WidgetGlobalState" name="WidgetGlobalState"></source>
      <sourceType>STRING</sourceType>
      <svgRefAnimation defaultValue="ipd_NotConnected" nodeId="WidgetGlobalState_node">
        <enumerationBinding>
          <item inputValue="1" value="ipd_NOK"></item>
          <item inputValue="2" value="ipd_NOK_NotAck"></item>
          <item inputValue="5" value="ipd_NotConnected"></item>
          <item inputValue="4" value="ipd_OK_NotAck"></item>
          <item inputValue="0" value="ipd_OK"></item>
          <item inputValue="3" value="ipd_Invalid"></item>
        </enumerationBinding>
      </svgRefAnimation>
    </animationRule>
    <animationRule>
      <source xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="ns2:statusDataSourceType" name="needack" />
      <sourceType>INT</sourceType>
      <blinkAnimation defaultValue="false">
        <rangeBinding>
          <range from="1" to="2147483647" value="true" />
        </rangeBinding>
      </blinkAnimation>
    </animationRule>
  </animationRules>
</animationConfiguration>
