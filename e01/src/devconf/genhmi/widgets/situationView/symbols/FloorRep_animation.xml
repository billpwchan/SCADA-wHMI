<?xml version="1.0" encoding="utf-8"?>
<animationConfiguration xmlns:ns2="http://www.thalesgroup.com/hv/mwt/conf/common" xmlns="http://www.thalesgroup.com/hv/mwt/conf/situationview/animation">
  <animationRules id="FloorRep_animation">
    <animationRule>
      <source xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="ns2:computedStatusDataSourceType" statusComputerName="com.thalesgroup.scadasoft.stresstest.calculated.widget.WidgetGlobalState" name="widgetglobalstate"></source>
      <sourceType>STRING</sourceType>
      <svgRefAnimation defaultValue="Floor_NotConnected" nodeId="widgetglobalstate_node">
        <enumerationBinding>
          <item inputValue="1" value="Floor_NOK"></item>
          <item inputValue="4" value="Floor_OK_NotAck"></item>
          <item inputValue="5" value="Floor_NotConnected"></item>
          <item inputValue="3" value="Floor_Invalid"></item>
          <item inputValue="2" value="Floor_NOK_NotAck"></item>
          <item inputValue="0" value="Floor_OK"></item>
        </enumerationBinding>
      </svgRefAnimation>
    </animationRule>
    <animationRule>
      <source xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="ns2:statusDataSourceType" name="eqpName"></source>
      <sourceType>STRING</sourceType>
      <textAnimation i18n="false" defaultValue="" nodeId="FloorRep_Floor_name_eqpNameDT"></textAnimation>
    </animationRule>
    <animationRule>
      <source xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="ns2:statusDataSourceType" name="needack" />
      <sourceType>INT</sourceType>
      <blinkAnimation defaultValue="false">
        <rangeBinding>
          <range from="1" to="2147483647" value="true" />
        </rangeBinding>
      </blinkAnimation>
    </animationRule>
  </animationRules>
</animationConfiguration>
