<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<p:genericDataGridConfiguration xmlns:p="http://www.thalesgroup.com/hv/mwt/conf/genericDataGrid" xmlns:cmn="http://www.thalesgroup.com/hv/mwt/conf/common" xmlns:sds="http://www.thalesgroup.com/hv/mwt/conf/subscription-data-source" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.thalesgroup.com/hv/mwt/conf/genericDataGrid mwt-gdg-config.xsd                       http://www.thalesgroup.com/hv/mwt/conf/common mwt-common.xsd">

    <p:gridConfiguration fastForwardPages="2" name="alarmListBanner" pageSize="3" displayPager="false" />

    <p:subject>
    <p:dataSource xsi:type="sds:subscriptionDataSource">
    <sds:transientDataSource>
    <sds:type>com.thalesgroup.myproject.data.exchange.entity.alarm.DoorIntrusionAlarmType</sds:type>
    <sds:type>com.thalesgroup.scadasoft.data.exchange.entity.alarm.SCADAsoftAlarmType</sds:type>
    </sds:transientDataSource>
    </p:dataSource>
    </p:subject>

	<!-- Status -->
    <p:column filterable="false" i18n="true" name="scsalarmList_state_name" sortable="false" width="40" widthUnit="PX" xsi:type="p:textEnumColumnType">
              
        <p:source name="ackstate" statusComputerName="ackstate" xsi:type="cmn:computedStatusDataSourceType"/>
        
        <p:textItem sourceValue="yes" value="scsalarmList_acked"/>
        <p:textItem sourceValue="no" value="scsalarmList_notAcked"/>
        
    </p:column>
    
	<!-- Time -->
    <p:column filterable="false" format="scsalarmList_DateFormat" i18n="true" name="scsalarmList_apparitionDate_name" sortable="false" width="100" widthUnit="PX" xsi:type="p:dateColumnType">
        <p:source name="apparitionDate" xsi:type="cmn:statusDataSourceType"/>
    </p:column>

	<!-- Building -->
    <p:column filterable="false" i18n="true" name="scsalarmList_area_name" sortable="false" width="60" widthUnit="PX" xsi:type="p:textEnumColumnType">
        <p:source name="areaID" xsi:type="cmn:statusDataSourceType"/>

        <p:textItem sourceValue="building1" value="scsalarmList_area_building1"/>
        <p:textItem sourceValue="building2" value="scsalarmList_area_building2"/>
        <p:textItem sourceValue="building3" value="scsalarmList_area_building3"/>
        <p:textItem sourceValue="building4" value="scsalarmList_area_building4"/>
        <p:textItem sourceValue="building5" value="scsalarmList_area_building5"/>
        <p:textItem sourceValue="building6" value="scsalarmList_area_building6"/>
        <p:textItem sourceValue="building7" value="scsalarmList_area_building7"/>
        <p:textItem sourceValue="building8" value="scsalarmList_area_building8"/>
        <p:textItem sourceValue="building9" value="scsalarmList_area_building9"/>
        <p:textItem sourceValue="building10" value="scsalarmList_area_building10"/>
    </p:column>
	
	<!-- System -->
    <p:column filterable="false" i18n="true" name="scsalarmList_funccat_name" sortable="false" width="50" widthUnit="PX" xsi:type="p:textEnumColumnType">
        <p:source name="functionalcategory" xsi:type="cmn:statusDataSourceType"/>

        <p:textItem sourceValue="1" value="scsalarmList_funcat_cctv"/>
        <p:textItem sourceValue="2" value="scsalarmList_funcat_access"/>
        <p:textItem sourceValue="3" value="scsalarmList_funcat_fire"/>
        <p:textItem sourceValue="4" value="scsalarmList_funcat_system"/>
        <p:textItem sourceValue="5" value="scsalarmList_funcat_power"/>
    </p:column>
	
	<!-- Equipment -->
    <p:column filterable="false" i18n="true" name="scsalarmList_sourceID_name" sortable="false" template="{}" templateMarker="{}" width="120" widthUnit="PX" xsi:type="p:textTemplateColumnType">
        <p:source name="sourceID" xsi:type="cmn:statusDataSourceType"/>
    </p:column>

	<!-- Description -->
    <p:column filterable="false" messageKey="msgId" name="scsalarmList_alarmText_name" sortable="false" width="300" widthUnit="PX" xsi:type="p:messageColumnType">
        <p:source name="alarmText" xsi:type="cmn:statusDataSourceType"/>
    </p:column>

	<!-- Status -->
    <p:column filterable="true" i18n="true" name="scsalarmList_priority_name" sortable="false" width="0" widthUnit="PX" xsi:type="p:textEnumColumnType">
        <p:source name="priority" xsi:type="cmn:statusDataSourceType"/>
        <p:textItem sourceValue="CRITICAL" value="scsalarmList_priority_CRITICAL"/>
        <p:textItem sourceValue="HIGH" value="scsalarmList_priority_HIGH"/>
        <p:textItem sourceValue="MEDIUM" value="scsalarmList_priority_MEDIUM"/>
        <p:textItem sourceValue="LOW" value="scsalarmList_priority_LOW"/>
    </p:column>
	
