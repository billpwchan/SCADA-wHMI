            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>**/*.keep*</exclude>
                    <exclude>**/*.contrib*</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/java</directory>
                <excludes>
                    <exclude>**/*.keep*</exclude>
                    <exclude>**/*.contrib*</exclude>
                </excludes>
            </resource>
        </resources>-->
    </build>
</project>
