<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE xml>
<data-set xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<header key="header">
		<EventBusName>socsummary</EventBusName>
		<EventBusScope>local</EventBusScope>
		<DataGrid>UIDataGridFormatterSOC</DataGrid>
		<DataGridColumnsType>String,String,String,String</DataGridColumnsType>
		<DataGridColumnsLabel>SOCCard,ScsEnvID,Alias,Description</DataGridColumnsLabel>
		<DataGridColumnsWidth>70,70,0,200</DataGridColumnsWidth>
		<DataGridColumnsSort>1,1,0,0</DataGridColumnsSort>
		<DataGridOptsXMLFile>UILayoutEntryPointSocSummary/SocCardList.xml</DataGridOptsXMLFile>
		<DataGridPagerName>SCADAgenPager</DataGridPagerName>
		<DataGridPageSize>10</DataGridPageSize>
		<DataGridFastForwardRows>30</DataGridFastForwardRows>
	</header>
	
	<actionset key="set_default_action">
		<OperationType>actionsetkey</OperationType>
	</actionset>	
	
	<actionset key="init">
