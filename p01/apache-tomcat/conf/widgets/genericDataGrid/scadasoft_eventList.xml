<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<p:genericDataGridConfiguration xmlns:p="http://www.thalesgroup.com/hv/mwt/conf/genericDataGrid" xmlns:cmn="http://www.thalesgroup.com/hv/mwt/conf/common" xmlns:sds="http://www.thalesgroup.com/hv/mwt/conf/subscription-data-source" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.thalesgroup.com/hv/mwt/conf/genericDataGrid mwt-gdg-config.xsd                       http://www.thalesgroup.com/hv/mwt/conf/common mwt-common.xsd">

    <p:gridConfiguration fastForwardPages="2" name="scseventList" pageSize="28"/>

    <p:subject>
    <p:dataSource xsi:type="sds:subscriptionDataSource">
    <sds:transientDataSource>
    <sds:type>com.thalesgroup.scadasoft.data.exchange.entity.alarm.ScseventType</sds:type>
    </sds:transientDataSource>
    </p:dataSource>
    </p:subject>
   
	<!-- Time -->
    <p:column filterable="true" format="scsalarmList_DateFormat" i18n="true" name="scseventList_scstime_name" sortable="true" width="160" widthUnit="PX" xsi:type="p:dateColumnType">
        <p:source name="scstime" xsi:type="cmn:statusDataSourceType"/>
    </p:column>
	
	<!-- Building -->
    <p:column filterable="true" i18n="true" name="scsalarmList_area_name" sortable="true" width="60" widthUnit="PX" xsi:type="p:textEnumColumnType">
        <p:source name="geographicalcategory" xsi:type="cmn:statusDataSourceType"/>
        <p:textItem sourceValue="1" value="scsalarmList_area_building1"/>
        <p:textItem sourceValue="2" value="scsalarmList_area_building2"/>
        <p:textItem sourceValue="3" value="scsalarmList_area_building3"/>
        <p:textItem sourceValue="4" value="scsalarmList_area_building4"/>
        <p:textItem sourceValue="5" value="scsalarmList_area_building5"/>
        <p:textItem sourceValue="6" value="scsalarmList_area_building6"/>
        <p:textItem sourceValue="7" value="scsalarmList_area_building7"/>
        <p:textItem sourceValue="8" value="scsalarmList_area_building8"/>
        <p:textItem sourceValue="9" value="scsalarmList_area_building9"/>
        <p:textItem sourceValue="10" value="scsalarmList_area_building10"/>
    </p:column>
	
	<!-- System -->
    <p:column filterable="true" i18n="true" name="scsalarmList_funccat_name" sortable="true" width="50" widthUnit="PX" xsi:type="p:textEnumColumnType">
        <p:source name="functionalcategory" xsi:type="cmn:statusDataSourceType"/>

        <p:textItem sourceValue="1" value="scsalarmList_funcat_cctv"/>
        <p:textItem sourceValue="2" value="scsalarmList_funcat_access"/>
        <p:textItem sourceValue="3" value="scsalarmList_funcat_fire"/>
        <p:textItem sourceValue="4" value="scsalarmList_funcat_system"/>
        <p:textItem sourceValue="5" value="scsalarmList_funcat_power"/>
    </p:column>

	<!-- Equipment -->
    <p:column filterable="true" i18n="false" name="scseventList_equipmentname_name" sortable="true" template="{}" templateMarker="{}" width="200" widthUnit="PX" xsi:type="p:textTemplateColumnType">
        <p:source name="equipmentname" xsi:type="cmn:statusDataSourceType"/>
    </p:column>
	
	<!-- Description -->
	<!--
    <p:column filterable="true" i18n="false" name="scseventList_displayMessage_name" sortable="true" template="{}" templateMarker="{}" width="250" widthUnit="PX" xsi:type="p:textTemplateColumnType">
        <p:source name="displayMessage" statusComputerName="displayMessage" xsi:type="cmn:computedStatusDataSourceType"/>
    </p:column>
	-->
	
    <p:column filterable="true" i18n="false" name="scseventList_displayMessage_name" sortable="true" template="{}" templateMarker="{}" width="250" widthUnit="PX" xsi:type="p:textTemplateColumnType">
        <p:source name="displayMessage" statusComputerName="com.thalesgroup.scadagen.calculated.GDGEventMessage" xsi:type="cmn:computedStatusDataSourceType"/>
    </p:column>

	<!-- Severity -->
    <p:column filterable="true" i18n="true" name="scseventList_severity_name" sortable="true" width="60" widthUnit="PX" xsi:type="p:textEnumColumnType">

        <p:source name="severity" xsi:type="cmn:statusDataSourceType"/>

        <p:textItem sourceValue="4" value="scseventList_priority_CRITICAL"/>
        <p:textItem sourceValue="3" value="scseventList_priority_HIGH"/>
        <p:textItem sourceValue="2" value="scseventList_priority_MEDIUM"/>
        <p:textItem sourceValue="1" value="scseventList_priority_LOW"/>
    </p:column>
	<!--
    <p:column filterable="true" i18n="false" name="scsalarmList_ar_name" sortable="true" template="{}" templateMarker="{}" width="0" widthUnit="PX" xsi:type="p:textTemplateColumnType">
        <p:source name="geographicalcategory" xsi:type="cmn:statusDataSourceType"/>
    </p:column>

    <p:column filterable="true" i18n="false" name="scsalarmList_fc_name" sortable="true" template="{}" templateMarker="{}" width="0" widthUnit="PX" xsi:type="p:textTemplateColumnType">
        <p:source name="functionalcategory" xsi:type="cmn:statusDataSourceType"/>
    </p:column>

    <p:column filterable="true" i18n="false" name="scseventList_sev_name" sortable="true" template="{}" templateMarker="{}" width="0" widthUnit="PX" xsi:type="p:textTemplateColumnType">
        <p:source name="severity" xsi:type="cmn:statusDataSourceType"/>
    </p:column>

    <p:column filterable="true" i18n="false" name="gdg_validity_name" sortable="true" template="{}" templateMarker="{}" width="0" widthUnit="PX" xsi:type="p:textTemplateColumnType">
        <p:source name="validity" statusComputerName="gdg_validity" xsi:type="cmn:computedStatusDataSourceType"/>
    </p:column>
	-->
	
    <p:defaultSort>
        <p:simpleSort ascending="false" columnName="scseventList_scstime_name"/>
    </p:defaultSort>
	
    <p:countersConfiguration>
        <cmn:counter name="eventlist_counter_all" scope="VIEW">
        </cmn:counter>
    </p:countersConfiguration>
	

</p:genericDataGridConfiguration>
