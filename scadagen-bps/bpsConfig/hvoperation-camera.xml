      	<p:equipmentId>camera-1</p:equipmentId>
      </p:equipmentList>
      <p:commandContent operationJavaClassName="com.thalesgroup.lib_tvs.data.tvs.cnf.camera.operation.StopMoveCamRequest">
        <p:commandParam paramName="operatorID" paramValue="chief"/>
        <p:commandParam paramName="requester" paramValue="SCADA1"/>
        <p:commandParam paramName="stopTilt" paramValue="true"/>
      </p:commandContent>
    </p:operationEntry>
    
    <p:operationEntry hvOperationEntryId="PTZFICamera_stopTilt_false">
      <p:equipmentList>
      	<p:equipmentId>camera-1</p:equipmentId>
      </p:equipmentList>
      <p:commandContent operationJavaClassName="com.thalesgroup.lib_tvs.data.tvs.cnf.camera.operation.StopMoveCamRequest">
