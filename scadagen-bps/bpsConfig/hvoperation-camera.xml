<p:hvOperationConfig xmlns:p="http://www.thalesgroup.com/scadagen/bps/conf/hvoperation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.thalesgroup.com/scadagen/bps/conf/hvoperation xsd/hv-operation-action.xsd ">
  <p:hvOperation hvOperationName="TestCamera">
    <p:operationEntry hvOperationEntryId="PTZFICameraReleaseCtrlLock">
      <p:equipmentList>
      	<p:equipmentId>camera-1</p:equipmentId>
      </p:equipmentList>
      <!--<p:equipmentType>com.thalesgroup.lib_tvs.data.tvs.cnf.camera.configuration.PTZFICameraType</p:equipmentType>-->
      <p:commandContent operationJavaClassName="com.thalesgroup.lib_tvs.data.tvs.cnf.camera.operation.ReleaseCameraCtrlLockRequest">
        <p:commandParam paramName="operatorID" paramValue="chief"/>
        <p:commandParam paramName="role" paramValue="VS_ADMINISTRATOR"/>
      </p:commandContent>
    </p:operationEntry>
    
    <p:operationEntry hvOperationEntryId="PTZFICameraCtrlLock">
      <p:equipmentList>
      	<p:equipmentId>camera-1</p:equipmentId>
      </p:equipmentList>
      <!--<p:equipmentType>com.thalesgroup.lib_tvs.data.tvs.cnf.camera.configuration.PTZFICameraType</p:equipmentType>-->
      <p:commandContent operationJavaClassName="com.thalesgroup.lib_tvs.data.tvs.cnf.camera.operation.CameraCtrlLockRequest">
        <p:commandParam paramName="operatorID" paramValue="chief"/>
        <p:commandParam paramName="role" paramValue="VS_ADMINISTRATOR"/>
      </p:commandContent>
    </p:operationEntry>
    
    <p:operationEntry hvOperationEntryId="PTZFICamera_stopPan">
      <p:equipmentList>
      	<p:equipmentId>camera-1</p:equipmentId>
      </p:equipmentList>
      <p:commandContent operationJavaClassName="com.thalesgroup.lib_tvs.data.tvs.cnf.camera.operation.StopMoveCamRequest">
        <p:commandParam paramName="operatorID" paramValue="chief"/>
        <p:commandParam paramName="requester" paramValue="SCADA1"/>
        <p:commandParam paramName="stopPan" paramValue="true"/>
      </p:commandContent>
    </p:operationEntry>
    
    <p:operationEntry hvOperationEntryId="PTZFICamera_stopPan_false">
      <p:equipmentList>
      	<p:equipmentId>camera-1</p:equipmentId>
      </p:equipmentList>
      <p:commandContent operationJavaClassName="com.thalesgroup.lib_tvs.data.tvs.cnf.camera.operation.StopMoveCamRequest">
        <p:commandParam paramName="operatorID" paramValue="chief"/>
        <p:commandParam paramName="requester" paramValue="SCADA1"/>
        <p:commandParam paramName="stopPan" paramValue="false"/>
